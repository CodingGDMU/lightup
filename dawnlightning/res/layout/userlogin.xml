<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
 	android:background="@drawable/login_main_bg"
    >

    <com.zhy.view.TitleBar
        android:id="@+id/TitleBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true" >
    </com.zhy.view.TitleBar>
    
   
     <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dip"
        android:layout_marginLeft="21.0dip"
        android:layout_marginRight="21.0dip"
        android:background="@drawable/shape_bg"
      
        android:orientation="vertical" >
		<RelativeLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    >

		     <com.zhy.view.EditTextWithDel
		     android:layout_toRightOf="@+id/picuser"
            android:id="@+id/accounts"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
       
             android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="10.0dip"
              android:textColor="#DAFFE2"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="30.0sp"
     
             />

		     <ImageView
		         android:id="@+id/picuser"
		         android:layout_width="48dp"
		         android:layout_height="44.0dip"
		         android:layout_alignParentLeft="true"
		         android:layout_alignParentTop="true"
		         android:layout_marginLeft="16dp"
		         android:background="@drawable/person" />

		</RelativeLayout>
       

        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
           android:layout_marginLeft="12dp"
	         android:layout_marginRight="12dp"
            android:background="#ffc0c3c4" />
	<RelativeLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    >
	      <com.zhy.view.EditTextWithDel
	       	android:layout_toRightOf="@+id/picpass"
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:gravity="center_vertical"
         
            android:inputType="textPassword"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="10.0dip"
            android:textColor="#DAFFE2"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="30.0sp"
         
             />

	      <ImageView
	          android:id="@+id/picpass"
	          android:layout_width="48dp"
	          android:layout_height="44.0dip"
	          android:layout_alignParentLeft="true"
	          android:layout_alignParentTop="true"
	          android:layout_marginLeft="14dp"
	          android:background="@drawable/lock" />
	 
	</RelativeLayout>
	     <View
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
           android:layout_marginLeft="12dp"
	         android:layout_marginRight="12dp"
            android:background="#ffc0c3c4" />

	     <Button
	         android:id="@+id/login"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="12dp"
	         android:layout_marginRight="12dp"
	         android:layout_marginTop="24dp"
	         android:background="@drawable/bt_login_shape"
	         android:gravity="center"
	         android:text="登  录"
	         android:textColor="#e1fce8"
	         android:textSize="18.0sp" />

	     <CheckBox
	         android:id="@+id/ch_is_savepassword"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="5dp"
	         android:text="记住密码"
	         android:textColor="#dcf9e4"
	         android:textSize="18.0sp" 
	         android:checked="true"
	         />

      	<RelativeLayout 
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    
      	    >
      	    <TextView 
      	    
		        android:layout_marginRight="12dp"
      	        android:id="@+id/not_resigter"
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content"
      	        android:text="还没注册？"
      	       android:textSize="16.0sp"
      	         android:textColor="#dcf9e4"
      	         
      	         android:layout_alignParentRight="true"
      	        />
      	   
      	</RelativeLayout>
    </LinearLayout>

  
        
    <!-- <com.ant.liao.GifView
        android:id="@+id/gifview01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        /> -->

	<ImageView
	    android:id="@+id/mylogo"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="80dp"
	    android:scaleType="centerInside"
	    android:src="@drawable/mylogo" />

</RelativeLayout>